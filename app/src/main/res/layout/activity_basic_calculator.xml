<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculatorapp.BasicCalculator">

    <Button
        android:id="@+id/clearButtonBC"
        android:layout_width="178dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#F64646"
        android:text="CLEAR"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decimalButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/threeButtonBC" />

    <Button
        android:id="@+id/backButtonBC"
        android:layout_width="178dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="165dp"
        android:backgroundTint="#4992CC"
        android:text="BACK"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subtractButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#5EC862"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/divideButtonBC" />

    <Button
        android:id="@+id/totalButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#5EC862"
        android:text="="
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/addButtonBC" />

    <Button
        android:id="@+id/addButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#5EC862"
        android:text="+"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/subtractButtonBC" />

    <Button
        android:id="@+id/nineButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/eightButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/multiplyButtonBC" />

    <Button
        android:id="@+id/eightButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="8"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/sevenButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/backButtonBC" />

    <Button
        android:id="@+id/zeroButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneButtonBC" />

    <Button
        android:id="@+id/oneButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourButtonBC" />

    <Button
        android:id="@+id/sevenButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="7"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonBC" />

    <Button
        android:id="@+id/fiveButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="5"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/fourButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/eightButtonBC" />

    <Button
        android:id="@+id/sixButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="6"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/fiveButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/nineButtonBC" />

    <Button
        android:id="@+id/threeButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/twoButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/sixButtonBC" />

    <Button
        android:id="@+id/decimalButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:text="."
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zeroButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/twoButtonBC" />

    <Button
        android:id="@+id/twoButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/oneButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/fiveButtonBC" />

    <Button
        android:id="@+id/fourButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sevenButtonBC" />

    <Button
        android:id="@+id/multiplyButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="165dp"
        android:backgroundTint="#5EC862"
        android:text="x"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/backButtonBC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textOutputBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="60dp"
        android:elegantTextHeight="false"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/divideButtonBC"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#5EC862"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/multiplyButtonBC"
        app:layout_constraintTop_toBottomOf="@+id/textOutputBC" />

</androidx.constraintlayout.widget.ConstraintLayout>